<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.edsondev26.folkloripedia.ui.about.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/gamesFragment"
        android:name="com.edsondev26.folkloripedia.ui.games.GamesFragment"
        android:label="fragment_games"
        tools:layout="@layout/fragment_games" />
    <fragment
        android:id="@+id/eventsFragment"
        android:name="com.edsondev26.folkloripedia.ui.events.EventsFragment"
        android:label="fragment_events"
        tools:layout="@layout/fragment_events" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.edsondev26.folkloripedia.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_articleDetailActivity"
            app:destination="@id/articleDetailActivity" />
    </fragment>

    <activity
        android:id="@+id/articleDetailActivity"
        android:name="com.edsondev26.folkloripedia.ui.article.ArticleDetailActivity"
        android:label="activity_article_detail"
        tools:layout="@layout/activity_article_detail" >
        <argument
            android:name="type"
            app:argType="com.edsondev26.folkloripedia.domain.model.ArticleModel" />
    </activity>
</navigation>